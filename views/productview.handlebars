                <li class="categories" data-category="6">Home Goods</li>
                <li class="categories" data-category="7">Sports Gear</li>
                <li class="categories" data-category="8">Shoes</li>
                <li  class="more">More
            <ul>
                        <li class="categories" data-category="9">Automotive</li>
                        <li class="categories" data-category="10">Hardware / tools</li>
                        <li class="categories" data-category="11">Other</li>
                        <li class="categories" data-category="12">Misc</li>
                    </ul>
                </li>
            </ul>
            <div class="mobile-nav-container">
                <div class="mobile-nav">
                    <div class="custom-searchbar-mobile">
                        <input class="search-bar" type="text" name="search" placeholder="search">
                        <button class="search-button">
                            <div class="button-icon"></div>
                        </button>
                    </div>
                    <h2 class="category-label">Categories</h2>
                    <div class="hamburger-menu">
                        <div class="hamburger-bar"></div>
                        <div class="hamburger-bar"></div>
                        <div class="hamburger-bar"></div>
                    </div>
                    <div class="exit-menu-btn hide">
                        <div class="ext-mnu-bar1"></div>
                        <div class="ext-mnu-bar2"></div>
                    </div>

                </div>
                <div class="mobile-categories hide">
                    <ul class="category-links-mobile">
                        <li class="categories" data-category="1">Electronics</li>
                        <li class="categories" data-category="2">Books</li>
                        <li class="categories" data-category="3">Gifts</li>
                        <li class="categories" data-category="4">Fashion</li>
                        <li class="categories" data-category="5">Toys/Games</li>
                        <li class="categories" data-category="6"></li>
                        <li class="categories" data-category="7">Sports Gear</li>
                        <li class="categories" data-category="8">Hardware</li>
                        <li class="categories" data-category="9">Automotive</li>
                        <li class="categories" data-category="10"></li>
                        <li class="categories" data-category="11">Other</li>
                        <li class="categories" data-category="12">Misc</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <main id="main-product">
        <section class="item-view">
            <div class="product-view-img">
                <div class="product-place-holder" style="background-color: blue; width: 100%; height: 500px;">
                </div>
            </div>
            <div class="product-view-description">
                <h2>{{this.product_name}}</h2>
                <h3>${{this.price}}</h3>
                <div class="productview-location">
                    <img src="images/location-icon.png" height="20px">
                    <p class="product-seller-location">{{this.location_city}}, {{this.location_state}}</p>
                </div>
                <p>{{this.longDescription}}</p>
                <h5 id="contact-seller">Contact Seller</h5>
                <div class="product-seller-info">
                    <div class="seller-info-productview">
                        <img src="images/user-icon-empty.png" width="20px" height="20px">
                        <p class="seller-profile-name">{{this.user.first_name}} {{this.user.last_name}}</p>
                    </div>
                    <div class="seller-info-productview">
                        <img src="images/email-icon-2.png" height="20px">
                        <p class="seller-email-address">{{this.user.email}}</p>
                    </div>
                    <div class="seller-info-productview">
                        <img src="images/phone-icon-2.png" height="20px">
                        <p class="seller-phone-number">{{this.user.phone}}</p>
                    </div>

                </div>
                <button class="add-to-cart">Add to Cart</button>
            </div>
        </section>
    </main>

    <footer id="product-footer">
        <div class="contacts">
            <div class="contact-links">
                <img src="images/email-icon-footer.png" height="18px">
                <p>eztrade@info.com</p>
            </div>
            <div class="contact-links">
                <img src="images/phone-icon-footer.png" height="18px">
                <p>1-800-545-3954</p>
            </div>
        </div>
    </footer>

    <script src="index.js"></script>