    <main>
        <section class="login-body">
            <div class="login-body-image">

            </div>
            <div class="login-body-form">
                <div class="main-form">
                    <h1>Create an Account</h1>
                    <form>
                        <input class="username" type="text" name="username" placeholder="enter your username or email">
                        <input class="first-name" type="text" name="first-name" placeholder="enter your first name">
                        <input class="last-name" type="text" name="last-name" placeholder="enter your last name">
                        <input class="password" type="text" name="password" placeholder="enter a password">
                        <input class="confirm-password" type="text" name="password" placeholder="confirm password">
                        <button type="submit" class="login-button">Log In</button>
                        <P>Already have an account? Log in <a href="#">Here</a>.</P>
                    </form>
                </div>
            </div>
        </section>

    </main>
