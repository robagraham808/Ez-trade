 <header class="login-header">
        <img src="/images/ez-tradelogo-white.png" height="45px">
    </header>

    <main>
        <section class="login-body">
            <div class="login-body-image">

            </div>
            <div class="login-body-form">
                <div class="main-form">
                    <h1>Create an Account</h1>
                    <form class="signup-form">
                        {{!-- email --}}
                        <input id="email-signup"class="username" type="text" name="username" placeholder="enter your username or email">
                        {{!-- first name --}}
                        <input id="first-name-signup" class="first-name" type="text" name="first-name" placeholder="enter your first name">
                        {{!-- last name --}}
                        <input id="last-name-signup" class="last-name" type="text" name="last-name" placeholder="enter your last name">
                        {{!-- password --}}
                        <input id="password-signup" class="password" type="text" name="password" placeholder="enter a password">
                        {{!-- confirm password --}}
                        <input id="password-confirm" class="confirm-password" type="text" name="password" placeholder="confirm password">
                        <button type="submit" class="login-button">Log In</button>
                        <P>Already have an account? Log in <a href="#">Here</a>.</P>
                    </form>
                </div>
            </div>
        </section>

    </main>
